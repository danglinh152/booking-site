@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/homepage/styles.css">
<!-- Banner hình ảnh -->
<div style="width: 100%; min-height: 260px; position: relative;">
    <img src="https://bambooairways.com/documents/20122/768330/Banner_2.png/14baa1c6-3b02-aecf-b044-ce312f7a1182?t=1689611909463" 
         alt="Banner dịch vụ bổ trợ"
         style="width: 100%; max-height: 260px; object-fit: cover;">
</div>

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" style="background: #fff; border-radius: 0; margin-top: 0; padding: 16px 0 0 32px;">
    <ol class="breadcrumb mb-0" style="background: transparent;">
        <li class="breadcrumb-item">
            <a href="/" style="color: #6c757d;"><i class="fas fa-home"></i></a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Booking" style="color: #6c757d; text-decoration: none;">Đặt Vé</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/SupportServices" style="color: #6c757d; text-decoration: none;">Dịch vụ bổ trợ</a>
        </li>
    </ol>
</nav>

<div class="container py-5" style="margin-top: 0;">
    <h2 class="mb-4" style="font-weight:bold; color:#156082;">Dịch vụ bổ trợ</h2>
    <div class="row g-4">
        <!-- Card lớn bên trái -->
        <div class="col-md-8">
            <div class="card h-100 shadow-sm support-card support-card-lg">
                <img src="~/images/Cho_ngoi.webp" class="card-img-top" alt="Chọn chỗ ngồi yêu thích">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h4 class="text-white mb-1">Chọn chỗ ngồi yêu thích</h4>
                    <a href="#" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
        <!-- 2 card nhỏ bên phải -->
        <div class="col-md-4 d-flex flex-column gap-4">
            <div class="card h-100 shadow-sm support-card support-card-sm">
                <img src="https://bambooairways.com/documents/20122/756668/Hanh_ly.png/e43b4b56-865e-3a64-2265-25c45cdeda22?t=1688567573728" class="card-img-top" alt="Mua thêm hành lý">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h5 class="text-white mb-1">Mua thêm hành lý</h5>
                    <a href="/Luggage" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
            <div class="card h-100 shadow-sm support-card support-card-sm">
                <img src="~/images/Thuong_gia.webp" class="card-img-top" alt="Phòng chờ thương gia">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h5 class="text-white mb-1">Phòng chờ thương gia</h5>
                    <a href="#" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Hàng dưới: 3 card nhỏ ngang -->
    <div class="row g-4 mt-1">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm support-card support-card-sm">
                <img src="https://bambooairways.com/documents/20122/1496219/landingpage-1920x360.png/d1c6a26c-8f28-86e8-03f4-bbb79c2b178b?t=1697601204919" class="card-img-top" alt="Bảo hiểm du lịch BambooCARE">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h5 class="text-white mb-1">Bảo hiểm du lịch BambooCARE</h5>
                    <a href="#" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm support-card support-card-sm">
                <img src="https://bambooairways.com/documents/20122/2003645/extra+seat.jpg/dba90df9-7a24-3621-761b-3915a20044d9?t=1739518825014" class="card-img-top" alt="Bảo hiểm du lịch TenPMCare">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h5 class="text-white mb-1">Bảo hiểm du lịch TenPMCare</h5>
                    <a href="#" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm support-card support-card-sm">
                <img src="https://bambooairways.com/documents/20122/1508851/362x230.jpg/1fb8409e-b9ff-e525-457c-69b4a60d1e0d?t=1702261405124" class="card-img-top" alt="Đặt trước suất ăn">
                <div class="card-img-overlay support-overlay d-flex flex-column justify-content-end">
                    <h5 class="text-white mb-1">Đặt trước suất ăn</h5>
                    <a href="/Meal" class="text-white support-link">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.support-card {
    border-radius: 18px;
    overflow: hidden;
    transition: box-shadow 0.3s, transform 0.3s;
    box-shadow: 0 8px 32px rgba(0,0,0,0.12);
}
.support-card-lg .card-img-top {
    height: 260px;
    object-fit: cover;
}
.support-card-sm .card-img-top {
    height: 120px;
    object-fit: cover;
}
.support-overlay {
    background: linear-gradient(180deg,rgba(0,0,0,0) 60%,rgba(0,0,0,0.6) 100%);
    border-radius: 18px;
    padding: 24px 24px 16px 24px;
}
.support-link {
    font-size: 1rem;
    text-decoration: underline;
    font-weight: 500;
}
.support-card:hover {
    box-shadow: 0 12px 40px rgba(0,0,0,0.18);
    transform: translateY(-4px) scale(1.02);
}
</style> 