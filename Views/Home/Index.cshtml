            function switchTab(tabId, element) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-pane');
            tabs.forEach(tab => {
                tab.classList.remove('show', 'active');
            });

            // Show the selected tab
            const selectedTab = document.getElementById(tabId);
            selectedTab.classList.add('show', 'active');

            // Remove active class from all tab links
            const tabLinks = document.querySelectorAll('.nav-link');
            tabLinks.forEach(link => {
                link.classList.remove('active');
            });

            // Add active class to the clicked tab link
            element.classList.add('active');
            }

            // Bấm vào đa chặng thì sẽ hiện ra web để chọn đa chặng
            const multicityRadio = document.getElementById('multicity');
            if (multicityRadio) {
                multicityRadio.addEventListener('change', function () {
                    if (this.checked) {
                        // Lưu trạng thái trước khi chuyển trang
                        localStorage.setItem('fromMulticity', 'true');
                        window.location.href = '/Multicity';
                    }
                });
            }

            // Xử lý sự kiện swap điểm đi và điểm đến
            const swapButton = document.getElementById("swapButton");
            const fromDropdown = document.getElementById("dropdownFromBtn");
            const toDropdown = document.getElementById("dropdownToBtn");

            if (swapButton && fromDropdown && toDropdown) {
                swapButton.addEventListener("click", function (e) {
                    e.preventDefault();
                    const fromTextSpan = fromDropdown.querySelector('.dropdown-text');
                    const toTextSpan = toDropdown.querySelector('.dropdown-text');
                    const fromValue = fromDropdown.getAttribute("data-value");
                    const toValue = toDropdown.getAttribute("data-value");
                    const fromText = fromTextSpan ? fromTextSpan.textContent : '';
                    const toText = toTextSpan ? toTextSpan.textContent : '';

                    // Hoán đổi text và value
                    if (fromTextSpan) fromTextSpan.textContent = toText;
                    if (toTextSpan) toTextSpan.textContent = fromText;
                    fromDropdown.setAttribute("data-value", toValue);
                    toDropdown.setAttribute("data-value", fromValue);
                });
            }

            // Kiểm tra khi trang được tải
            document.addEventListener('DOMContentLoaded', function() {
                // Kiểm tra nếu quay về từ Multicity
                if (localStorage.getItem('fromMulticity') === 'true') {
                    const oneWayRadio = document.getElementById('oneWay');
                    if (oneWayRadio) {
                        oneWayRadio.checked = true;
                        // Kích hoạt sự kiện change để cập nhật UI
                        const event = new Event('change');
                        oneWayRadio.dispatchEvent(event);
                    }
                    // Xóa trạng thái sau khi đã xử lý
                    localStorage.removeItem('fromMulticity');
                }
            });
