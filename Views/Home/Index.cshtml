                                <form class="col-md-4 align-self-end" asp-action="GetTicket" asp-controller="GetTicket" method="get">
                                    <!-- Các input -->
                                    <div >
                                        <button type="submit" class="btn-cuatao w-100">Tìm Chuyến Bay</button>
                                    </div>
                                </form>

                                
                            </div>

                            <div class="form-check form-switch mt-3">
