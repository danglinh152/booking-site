<body>
    <div>
        <div class="bg d-flex justify-content-center">
            <div class="booking-container">
                <!-- Tab menu -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" onclick="switchTab('tab-datve', this)">✈ Đặt Vé</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="switchTab('tab-lamthutuc', this)">🛄 Làm Thủ Tục</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="switchTab('tab-datcho', this)">📅 Đặt Chỗ Của Tôi</a>
                    </li>
                </ul>

                <!-- Nội dung form -->
                <div class="tab-content booking-box">
                    <!-- Nội dung form Đặt Vé -->
                    <div class="tab-pane fade show active" id="tab-datve">
                        <a class="btn btn-primary m-2" onclick="handleNotLogin()">Bằng Tiền</a>
                        <a class="btn btn-secondary m-2" onclick="handleLogin()">Bằng Tiền & Điểm</a>
                        <div class="booking-box p-4 mt-3" id="bookingBox">
                            <div class="radio-group mb-3">
                                <div class="d-flex justify-content-center gap-4">
                                    <label class="radio-label">
                                        <input type="radio" name="tripType" id="oneWay" checked> Một chiều
                                    </label>
                                    <label class="radio-label">
                                        <input type="radio" name="tripType" id="roundTrip"> Khứ hồi
                                    </label>
                                    <label class="radio-label">
                                        <input type="radio" name="tripType" id="multicity"> Đa chặng
                                    </label>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- Cột "Từ" -->
                                <div class="col-md-3">
                                    <label class="form-label">Từ</label>
                                    <div class="dropdown">
                                        <button id="dropdownFromBtn" class="btn btn-light dropdown-toggle w-100" type="button"
                                            data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            <span class="dropdown-text">Chọn điểm đi</span>
                                        </button>
                                        <div class="dropdown-menu p-2" style="min-width: 220px;">
                                            
                                            <div class="tab-content mt-2" id="tabCountryFromContent">
                                                <div class="tab-pane fade show active" id="vn-from" role="tabpanel" aria-labelledby="vn-tab-from">
                                                    <button class="dropdown-item" data-value="HAN">Hà Nội (HAN)</button>
                                                    <button class="dropdown-item" data-value="SGN">TP. Hồ Chí Minh (SGN)</button>
                                                    <button class="dropdown-item" data-value="DAD">Đà Nẵng (DAD)</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Nút Swap -->
                                <div class="col-md-1 d-flex align-items-end">
                                    <button id="swapButton" class="btn btn-outline-secondary w-100">🔄</button>
                                </div>
                                <!-- Cột "Tới" -->
                                <div class="col-md-3">
                                    <label class="form-label">Tới</label>
                                    <div class="dropdown">
                                        <button id="dropdownToBtn" class="btn btn-light dropdown-toggle w-100" type="button"
                                            data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            <span class="dropdown-text">Chọn điểm đến</span>
                                        </button>
                                        <div class="dropdown-menu p-2" style="min-width: 220px;">
                                            <div class="tab-content mt-2" id="tabCountryToContent">
                                                <div class="tab-pane fade show active" id="vn-to" role="tabpanel" aria-labelledby="vn-tab-to">
                                                    <button class="dropdown-item" data-value="HAN">Hà Nội (HAN)</button>
                                                    <button class="dropdown-item" data-value="SGN">TP. Hồ Chí Minh (SGN)</button>
                                                    <button class="dropdown-item" data-value="DAD">Đà Nẵng (DAD)</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Cột "Ngày đi" -->
                                <div id="depart-date-container" class="col-md-2">
                                    <label for="depart-date" class="form-label">Ngày đi</label>
                                    <input type="date" id="depart-date" class="form-control">
                                </div>
                                <!-- Cột "Ngày về" -->
                                <div id="return-date-container" class="col-md-2" style="display: none;">
                                    <label for="return-date" class="form-label">Ngày về</label>
                                    <input type="date" id="return-date" class="form-control">
                                </div>
                            </div>

                            <div class="row g-3 mt-3">
                                <!-- Số lượng hành khách -->
                                <div class="col-md-4">
                                    <label class="form-label">Hành khách</label>
                                    <div class="dropdown">
                                        <button id="passengerSelect" class="btn btn-light same-size dropdown-toggle"
                                            type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside"
                                            aria-expanded="false">
                                            <span id="amountPassenger">1</span>
                                        </button>
                                        <div class="dropdown-menu p-3" id="passengerBox">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="passenger-label">Người lớn</span>
                                                <div class="counter">
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('adult', -1)">-</button>
                                                    <span id="adultCount">1</span>
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('adult', 1)">+</button>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="passenger-label">Trẻ em (2-11 tuổi)</span>
                                                <div class="counter">
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('child', -1)">-</button>
                                                    <span id="childCount">0</span>
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('child', 1)">+</button>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="passenger-label">Trẻ sơ sinh (0-2 tuổi)</span>
                                                <div class="counter">
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('infant', -1)">-</button>
                                                    <span id="infantCount">0</span>
                                                    <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateCount('infant', 1)">+</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Mã giảm giá</label>
                                    <input type="text" class="form-control same-size"
                                        placeholder="Nhập mã giảm giá của bạn">
                                </div>
