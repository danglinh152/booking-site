@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en" style="background: #fff;">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TenPM Booking</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/homepage/styles.css">
    <link rel="stylesheet" href="~/css/booking/style.css">
</head>


<body style="background: #fff;">
    <!-- Banner hình ảnh -->
    <div style="width: 100%; min-height: 260px; position: relative;">
        <img src="/images/MayBay.png" class="card-img-top" alt="Ảnh đẹp" style="width: 100%; max-height: 260px; object-fit: cover;">
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" style="background: #fff; border-radius: 0; margin-top: 0; padding: 16px 0 0 32px;">
        <ol class="breadcrumb mb-0" style="background: transparent;">
            <li class="breadcrumb-item">
                <a href="/" style="color: #6c757d;"><i class="fas fa-home"></i></a>
            </li>
            <li class="breadcrumb-item active " aria-current="page">
                <a href="/booking">Đặt vé</a></a>
            </li>
        </ol>
    </nav>

    <div class="container py-5" style="margin-top: 0; background: #fff;">
        <h2 class="mb-4" style="font-weight:bold; color:#156082;">Đặt vé</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card custom-card card-custom">
                    <img src="/images/Thong tin dat ve.png" class="card-img-top" alt="Thông tin đặt vé">
                    <div class="card-overlay">
                        <h5>Thông tin đặt vé</h5>
                        <a href="#" class="text-white text-decoration-underline">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card custom-card card-custom">
                    <img src="/images/Additional Service.jpg" class="card-img-top" alt="Dịch vụ bổ trợ">
                    <div class="card-overlay">
                        <h5>Dịch vụ bổ trợ</h5>
                        <a href="/SupportServices" class="text-white text-decoration-underline">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card custom-card card-custom">
                    <img src="/images/Inflight.jpg" class="card-img-top" alt="Trải nghiệm">
                    <div class="card-overlay">
                        <h5>Trải nghiệm cùng TenPM Airways</h5>
                        <a href="#" class="text-white text-decoration-underline">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card custom-card card-custom">
                    <img src="/images/Bamboo and More.jpg" class="card-img-top" alt="Sản phẩm bổ trợ">
                    <div class="card-overlay">
                        <h5>Dịch vụ đồ ăn</h5>
                        <a href="/booking/food" class="text-white text-decoration-underline">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/plugins/popper.min.js"></script>
    <script src="~/js/plugins/simplebar.min.js"></script>
    <script src="~/js/plugins/bootstrap.min.js"></script>
    <script src="~/js/fonts/custom-font.js"></script>
    <script src="~/js/pcoded.js"></script>
    <script src="~/js/plugins/feather.min.js"></script>

    <script>layout_change('light');</script>
    <script>change_box_container('false');</script>
    <script>layout_rtl_change('false');</script>
    <script>preset_change("preset-1");</script>
    <script>font_change("Public-Sans");</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
