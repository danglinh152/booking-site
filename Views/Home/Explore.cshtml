@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TenPM Booking</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/homepage/styles.css">
    <link rel="stylesheet" href="~/css/explore/style.css">

</head>
<style>

</style>

<body>
    <div class="card custom-card">
        <img src="/images/MayBay.png" class="card-img-top" alt="Ảnh đẹp">
    </div>
    <div class="container">
        <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '›';"></nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"><i class="bi bi-house-fill"></i></a>
            </li>
            <li class="breadcrumb-item active " aria-current="page">
                <a href="/Explore">Khám phá</a>
            </li>
        </ol>
        </nav>
    </div>

    <!-- Phần đặt vé-->
    <div class="container">
        <h4 class="fw-bold mb-4" style="color: black;">Khám phá</h4>
        <div class="row g-4">
            <!-- Card 1 -->
            <div class="col-md-6">
                <div class="card card-custom">
                    <img src="/images/PhoCoHoiAn.jpg" class="card-img-top" alt="Thông tin đặt vé">
                    <div class="card-overlay">
                        <h5><a href="#" class="text-white">Điểm đến</a></h5>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-6">
                <div class="card card-custom">
                    <img src="/images/552x264.jpg" class="card-img-top" alt="Dịch vụ bổ trợ">
                    <div class="card-overlay">
                        <h5><a href="#" class="text-white">Ưu đãi hấp dẫn</a></h5>
                    </div>
                </div>
            </div>

            <!-- Card 3 - chiếm toàn bộ hàng -->
            <div class="col-12">
                <div class="card card-custom">
                    <img src="/images/Fare rule.jpg" class="card-img-top" alt="Trải nghiệm">
                    <div class="card-overlay">
                        <h5><a href="#" class="text-white">Vé máy bay & lịch bay</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/plugins/popper.min.js"></script>
    <script src="~/js/plugins/simplebar.min.js"></script>
    <script src="~/js/plugins/bootstrap.min.js"></script>
    <script src="~/js/fonts/custom-font.js"></script>
    <script src="~/js/pcoded.js"></script>
    <script src="~/js/plugins/feather.min.js"></script>

    <script>layout_change('light');</script>
    <script>change_box_container('false');</script>
    <script>layout_rtl_change('false');</script>
    <script>preset_change("preset-1");</script>
    <script>font_change("Public-Sans");</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
