                                            <button class="btn btn-secondary"
                                                onclick="showDetails(2, 'Beijing Capital International Airport', 'Beijing', 'China')">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                            <a href="/admin/airports/edit/2" class="btn btn-warning">Edit</a>
                                            <a href="/admin/airports/delete/1" class="btn btn-danger"
                                                onclick="return confirmDelete();">Delete</a>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Los Angeles International Airport</td>
                                        <td>Los Angeles</td>
                                        <td>USA</td>
                                        <td>
                                            <button class="btn btn-secondary"
                                                onclick="showDetails(3, 'Los Angeles International Airport', 'Los Angeles', 'USA')">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                            <a href="/admin/airports/edit/3" class="btn btn-warning">Edit</a>
                                            <a href="/admin/airports/delete/1" class="btn btn-danger"
                                                onclick="return confirmDelete();">Delete</a>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>Dubai International Airport</td>
                                        <td>Dubai</td>
                                        <td>UAE</td>
                                        <td>
                                            <button class="btn btn-secondary"
                                                onclick="showDetails(4, 'Dubai International Airport', 'Dubai', 'UAE')">
                                                <i class="fa-solid fa-eye"></i>
                                            </button>
                                            <a href="/admin/airports/edit/4" class="btn btn-warning">Edit</a>
                                            <a href="/admin/airports/delete/1" class="btn btn-danger"
                                                onclick="return confirmDelete();">Delete</a>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>5</td>
                                        <td>Tokyo Haneda Airport</td>
