@model IEnumerable<BookingSite.Models.BookingDetail>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Chi tiết đặt vé";
    var first = Model.FirstOrDefault();
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TenPM - Check-in vé máy bay</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4 text-primary">Chi tiết đặt vé</h2>

        @if (first != null)
        {
            <table class="table table-bordered mb-4">
                <tr><th>Mã đặt vé</th><td>@first.Booking.BookingCode</td></tr>
                <tr><th>Ngày đặt</th><td>@first.Booking.BookingDate.ToString("dd/MM/yyyy")</td></tr>
                <tr><th>Trạng thái</th><td>@first.Booking.Status</td></tr>
            </table>
        }

        <h5>Thông tin hành khách:</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Số ghế</th>
                    <th>Hành trình</th>
                    <th>Ngày bay</th>
                    <th>Giá vé</th>
                    <th>Dịch vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.Passenger.FullName</td>
                        <td>@detail.Passenger.SeatNumber</td>
                        <td>@(detail.FareClass != null ? "Saigon - Hanoi" : "-")</td>
                        <td>@(detail.FareClass != null ? ("15-02-2004") : "-")</td>
                        <td>@(detail.FareClass != null ? string.Format("{0:N0} VND", detail.FareClass.Price) : "-")</td>
                        <td>
                            @if (detail.BookingServices != null && detail.BookingServices.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var service in detail.BookingServices)
                                    {
                                        <li>"Dich vu"</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>Không có</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a href="/profile/history-booking" class="btn btn-outline-secondary">← Quay lại</a>
        </div>
    </div>
</div>
