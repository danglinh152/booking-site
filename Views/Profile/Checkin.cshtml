@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Check-in vé máy bay";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TenPM - Check-in vé máy bay</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<style>
    .form-container {
        max-width: 480px;
        margin: 3rem auto;
        background: #fff;
        padding: 2.5rem 2rem 3rem 2rem;
        border-radius: 12px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-title {
        font-weight: 700;
        font-size: 1.8rem;
        margin-bottom: 1.8rem;
        color: #33475b;
        text-align: center;
        letter-spacing: 0.03em;
    }

    label.form-label {
        font-weight: 600;
        font-size: 0.9rem;
        color: #4a4a4a;
        margin-bottom: 0.4rem;
        display: inline-block;
    }

    input.form-control,
    select.form-control {
        border: 2px solid #d1d9e6;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    input.form-control:focus,
    select.form-control:focus {
        border-color: #5c8df6;
        box-shadow: 0 0 6px #a3b9ff88;
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #5561ff 0%, #1a39c7 100%);
        border: none;
        border-radius: 8px;
        padding: 0.6rem 2.2rem;
        font-size: 1.05rem;
        font-weight: 600;
        box-shadow: 0 6px 12px rgba(85, 97, 255, 0.48);
        transition: background 0.4s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #4351d6 0%, #112c9c 100%);
        box-shadow: 0 8px 20px rgba(67, 81, 214, 0.6);
    }

    .alert-success {
        font-weight: 600;
        background-color: #e6f0ff;
        border-color: #a1c0ff;
        color: #2b5db3;
        border-radius: 8px;
        padding: 0.9rem 1.4rem;
        margin-bottom: 1.5rem;
        text-align: center;
        box-shadow: 0 3px 6px #9eb9ff44;
    }

    .text-danger {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<body>
    <div class="form-container" style="min-height: 600px;">
        <h2 class="form-title">Check-in vé máy bay</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="CheckIn" method="post" novalidate>
            <div class="mb-4 d-flex flex-column">
                <label for="BookingCode" class="form-label">Mã đặt vé (Booking code)</label>
                <input id="BookingCode" name="BookingCode" type="text" class="form-control" placeholder="Nhập mã đặt vé" required />
            </div>

            <div class="mb-4 d-flex flex-column">
                <label for="FullName" class="form-label">Họ tên hành khách</label>
                <input id="FullName" name="FullName" type="text" class="form-control" placeholder="Nhập họ tên hành khách" required />
            </div>

            <div class="mb-4 d-flex flex-column">
                <label for="IdNumber" class="form-label">Số CMND / Passport</label>
                <input id="IdNumber" name="IdNumber" type="text" class="form-control" placeholder="Nhập số CMND hoặc hộ chiếu" required />
            </div>

            <div class="mb-5 d-flex flex-column">
                <label for="SeatNumber" class="form-label">Chọn số ghế</label>
                <select id="SeatNumber" name="SeatNumber" class="form-control" required>
                    <option value="" disabled selected>Chọn số ghế</option>
                    <option value="1A">1A</option>
                    <option value="1B">1B</option>
                    <option value="1C">1C</option>
                    <option value="2A">2A</option>
                    <option value="2B">2B</option>
                    <option value="2C">2C</option>
                    <option value="3A">3A</option>
                    <option value="3B">3B</option>
                    <option value="3C">3C</option>
                </select>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/profile/history-booking" class="btn btn-outline-secondary">Lịch sử đặt vé</a>
                <button type="submit" class="btn btn-primary">Xác nhận check-in</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
