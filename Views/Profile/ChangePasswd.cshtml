@model BookingSite.Controllers.ProfileController.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đổi mật khẩu";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TenPM - Hồ sơ cá nhân</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<style>
    .form-container {
        max-width: 480px;
        margin: 3rem auto;
        background: #fff;
        padding: 2.5rem 2rem 3rem 2rem;
        border-radius: 12px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-title {
        font-weight: 700;
        font-size: 1.8rem;
        margin-bottom: 1.8rem;
        color: #33475b;
        text-align: center;
        letter-spacing: 0.03em;
    }

    label.form-label {
        font-weight: 600;
        font-size: 0.9rem;
        color: #4a4a4a;
        margin-bottom: 0.4rem;
        display: inline-block;
    }

    input.form-control {
        border: 2px solid #d1d9e6;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    input.form-control:focus {
        border-color: #5c8df6;
        box-shadow: 0 0 6px #a3b9ff88;
        outline: none;
    }

    .text-danger {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        display: block;
    }

    .btn-primary {
        background: linear-gradient(135deg, #5561ff 0%, #1a39c7 100%);
        border: none;
        border-radius: 8px;
        padding: 0.6rem 2.2rem;
        font-size: 1.05rem;
        font-weight: 600;
        box-shadow: 0 6px 12px rgba(85, 97, 255, 0.48);
        transition: background 0.4s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #4351d6 0%, #112c9c 100%);
        box-shadow: 0 8px 20px rgba(67, 81, 214, 0.6);
    }

    .btn-outline-secondary {
        color: #555;
        border-radius: 8px;
        border: 2px solid #ccc;
        padding: 0.5rem 1.8rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        color: #1a39c7;
        border-color: #1a39c7;
        background-color: #e7e9ff;
    }

    .alert-success {
        font-weight: 600;
        background-color: #e6f0ff;
        border-color: #a1c0ff;
        color: #2b5db3;
        border-radius: 8px;
        padding: 0.9rem 1.4rem;
        margin-bottom: 1.5rem;
        text-align: center;
        box-shadow: 0 3px 6px #9eb9ff44;
    }
</style>

<body>
    <div class="form-container" style="min-height: 600px;">
        <h2 class="form-title">Đổi mật khẩu</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="ChangePasswd" method="post" novalidate class="d-flex flex-column justify-content-between my-5">
            <div class="mb-4 d-flex flex-column">
                <label asp-for="CurrentPassword" class="form-label">Mật khẩu hiện tại</label>
                <input asp-for="CurrentPassword" type="password" class="form-control"
                    placeholder="Nhập mật khẩu hiện tại" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="mb-4 d-flex flex-column">
                <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-5 d-flex flex-column">
                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control"
                    placeholder="Nhập lại mật khẩu mới" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/profile" class="btn btn-outline-secondary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </form>

    </div>
</body>
