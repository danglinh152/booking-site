@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lịch sử đặt vé máy bay";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TenPM - Lịch sử đặt vé máy bay</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<style>
    .history-container {
        max-width: 900px;
        margin: 3rem auto;
        background: #fff;
        padding: 2rem 2.5rem 2.5rem 2.5rem;
        border-radius: 12px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .history-title {
        font-weight: 700;
        font-size: 1.9rem;
        margin-bottom: 2rem;
        color: #33475b;
        text-align: center;
        letter-spacing: 0.03em;
    }

    table thead th {
        border-bottom: 2px solid #5561ff;
        font-weight: 600;
        color: #33475b;
        text-align: center;
        vertical-align: middle;
    }

    table tbody td {
        vertical-align: middle;
        text-align: center;
        font-size: 0.95rem;
        color: #4a4a4a;
    }

    .btn-detail {
        padding: 0.4rem 1rem;
        font-size: 0.875rem;
        border-radius: 6px;
        font-weight: 600;
    }

    .btn-confirmed {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .btn-cancelled {
        background-color: #f8d7da;
        color: #842029;
    }

    .btn-pending {
        background-color: #fff3cd;
        color: #664d03;
    }

    .btn-outline-secondary {
        color: #555;
        border-radius: 8px;
        border: 2px solid #ccc;
        padding: 0.5rem 1.8rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        color: #1a39c7;
        border-color: #1a39c7;
        background-color: #e7e9ff;
    }
</style>

<body>
    <div class="history-container" style="min-height: 600px;">
        <h2 class="history-title">Lịch sử đặt vé máy bay</h2>

        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Mã đặt vé</th>
                    <th>Hành trình</th>
                    <th>Ngày đặt vé</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data -->
                <tr>
                    <td>BK123456</td>
                    <td>Hà Nội → TP. Hồ Chí Minh</td>
                    <td>2025-06-01</td>
                    <td>
                        <a href="/profile/history-booking/BK123456" class="btn btn-detail btn-confirmed">Xem chi tiết</a>
                    </td>
                </tr>
                <tr>
                    <td>BK123457</td>
                    <td>Đà Nẵng → Hà Nội</td>
                    <td>2025-06-10</td>
                    <td>
                        <a href="/profile/history-booking/BK123457" class="btn btn-detail btn-pending">Xem chi tiết</a>
                    </td>
                </tr>
                <tr>
                    <td>BK123458</td>
                    <td>TP. Hồ Chí Minh → Nha Trang</td>
                    <td>2025-05-15</td>
                    <td>
                        <a href="/profile/history-booking/BK123458" class="btn btn-detail btn-cancelled">Xem chi tiết</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center mt-4">
            <a href="/profile" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </div>
</body>

</html>
