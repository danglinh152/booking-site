@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary
}
@model BookingSite.Models.User
<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Create User Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Create User</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateUser" asp-controller="Users" method="post">
                            <div class="form-group mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input asp-for="FullName" type="text" class="form-control" id="username"
                                    placeholder="Enter Username" required>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="userEmail">Email</label>
                                <input asp-for="Email" type="email" class="form-control" id="userEmail"
                                    placeholder="Enter Email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="userPassword">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="userPassword"
                                    placeholder="Enter Password" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="userRole">Role</label>
                                <select asp-for="Role" class="form-select" id="userRole">
                                    <option value="">Select a Role</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Customer">Customer</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/users" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create User</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

<script>
    // You can add any additional JavaScript needed for this form here
</script>
