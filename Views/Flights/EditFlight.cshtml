@{
    ViewData["Title"] = "Flight Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary

    // Get ID from the route
    var flightId = ViewContext.RouteData.Values["id"]; // Accessing RouteData

    // Initialize variables
    string planeId;
    string departureAirport;
    string arrivalAirport;
    string departureTime;
    string totalSeats;
    string availableSeats;
    string status;

    // Check if flightId is valid
    if (flightId != null && int.TryParse(flightId.ToString(), out int id))
    {
        switch (id)
        {
            case 1:
                planeId = "P1";
                departureAirport = "JFK";
                arrivalAirport = "LAX";
                departureTime = "2025-03-30T15:00";
                totalSeats = "300";
                availableSeats = "150";
                status = "Scheduled";
                break;
            case 2:
                planeId = "P2";
                departureAirport = "ATL";
                arrivalAirport = "ORD";
                departureTime = "2025-04-05T10:00";
                totalSeats = "180";
                availableSeats = "80";
                status = "Scheduled";
                break;
            default:
                planeId = "Unknown Plane ID";
                departureAirport = "Unknown Airport";
                arrivalAirport = "Unknown Airport";
                departureTime = "Unknown Time";
                totalSeats = "Unknown";
                availableSeats = "Unknown";
                status = "Unknown Status";
                break;
        }
    }
    else
    {
        planeId = "Unknown Plane ID";
        departureAirport = "Unknown Airport";
        arrivalAirport = "Unknown Airport";
        departureTime = "Unknown Time";
        totalSeats = "Unknown";
        availableSeats = "Unknown";
        status = "Unknown Status";
    }
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Flight Information</h2>
                    </div>
                    <div class="card-body">
                        <form action="/admin/flights/update/@flightId" method="post">
                            <div class="form-group mb-3">
                                <label class="form-label" for="flightId">Flight ID</label>
                                <input type="text" class="form-control" id="flightId" placeholder="Enter Flight ID"
                                    value="@flightId" readonly>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="planeId">Plane ID</label>
                                <input type="text" class="form-control" id="planeId" placeholder="Enter Plane ID"
                                    value="@planeId" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="departureAirport">Departure Airport</label>
                                <input type="text" class="form-control" id="departureAirport"
                                    placeholder="Enter Departure Airport" value="@departureAirport" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="arrivalAirport">Arrival Airport</label>
                                <input type="text" class="form-control" id="arrivalAirport"
                                    placeholder="Enter Arrival Airport" value="@arrivalAirport" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="departureTime">Departure Time</label>
                                <input type="datetime-local" class="form-control" id="departureTime"
                                    placeholder="Enter Departure Time" value="@departureTime" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="totalSeats">Total Seats</label>
                                <input type="number" class="form-control" id="totalSeats"
                                    placeholder="Enter Total Seats" value="@totalSeats" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="availableSeats">Available Seats</label>
                                <input type="number" class="form-control" id="availableSeats"
                                    placeholder="Enter Available Seats" value="@availableSeats" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="status">Status</label>
                                <select class="form-control" id="status" required>
                                    <option value="Scheduled">Scheduled
                                    </option>
                                    <option value="Cancelled">Cancelled
                                    </option>
                                    <option value="Completed">Completed
                                    </option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/flights" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Flight</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

