@{
    ViewData["Title"] = "Flight Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary
}

@model BookingSite.Models.Flight

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Flight Information</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditFlight" asp-controller="Flights" asp-route-id="@Model.FlightID"
                            method="post">
                            <input type="hidden" asp-for="FlightID" />
                            <div class="form-group mb-3">
                                <label class="form-label" for="PlaneId">Plane</label>
                                <select asp-for="PlaneID" class="form-control" asp-items="ViewBag.PlaneID">
                                    <option value="">-- Chọn máy bay --</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="FlightDate">Flight Date</label>
                                <input asp-for="FlightDate" class="form-control" type="date"
                                    placeholder="Enter Flight Date" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="DepartureAirportID">Departure Airport</label>
                                <select asp-for="DepartureAirportID" class="form-control"
                                    asp-items="ViewBag.DepartureAirportID">
                                    <option value="">-- Chọn sân bay đi --</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="ArrivalAirportID">Arrival Airport</label>
                                <select asp-for="ArrivalAirportID" class="form-control"
                                    asp-items="ViewBag.ArrivalAirportID">
                                    <option value="">-- Chọn sân bay đến --</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="ArrivalTime">Departure Time</label>
                                <input asp-for="DepartureTime" class="form-control" type="time"
                                    placeholder="Enter Departure Time" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="departureTime">Departure Time</label>
                                <input asp-for="ArrivalTime" class="form-control" type="time"
                                    placeholder="Enter Departure Time" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="Status">Status</label>
                                <select asp-for="Status" class="form-control" id="Status" required>
                                    <option value="Scheduled">Scheduled
                                    </option>
                                    <option value="Cancelled">Cancelled
                                    </option>
                                    <option value="Completed">Completed
                                    </option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/flights" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Flight</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

<script>
    // You can add any additional JavaScript functionality here if needed
</script>
