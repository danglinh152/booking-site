@{
    ViewData["Title"] = "Create Check-in";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Create Check-in Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Create Check-in</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="bookingId">Booking ID</label>
                                <input type="text" class="form-control" id="bookingId" placeholder="Enter Booking ID">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="checkinTime">Check-in Time</label>
                                <input type="datetime-local" class="form-control" id="checkinTime">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="statusSelect">Status</label>
                                <select class="form-select" id="statusSelect">
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/checkins" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create Check-in</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

