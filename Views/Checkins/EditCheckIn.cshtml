@{
    ViewData["Title"] = "Check-in Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary

    // Lấy ID từ đường dẫn
    var checkinId = ViewContext.RouteData.Values["id"]; // Accessing RouteData

    // Initialize variables
    string bookingId;
    string checkinTime;
    string status;

    // Check if checkinId is valid
    if (checkinId != null && int.TryParse(checkinId.ToString(), out int id))
    {
        switch (id)
        {
            case 1:
                bookingId = "Booking-001";
                checkinTime = "2025-03-22 10:00 AM";
                status = "Confirmed";
                break;
            case 2:
                bookingId = "Booking-002";
                checkinTime = "2025-03-22 11:00 AM";
                status = "Confirmed";
                break;
            default:
                bookingId = "Unknown Booking";
                checkinTime = "Unknown Time";
                status = "Unknown Status";
                break;
        }
    }
    else
    {
        bookingId = "Unknown Booking";
        checkinTime = "Unknown Time";
        status = "Unknown Status";
    }
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Update Check-in Information</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="bookingId">Booking ID</label>
                                <input type="text" class="form-control" id="bookingId" placeholder="Enter Booking ID"
                                    value="@bookingId" readonly>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="checkinTime">Check-in Time</label>
                                <input type="text" class="form-control" id="checkinTime"
                                    placeholder="Enter Check-in Time" value="@checkinTime">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="statusSelect">Status</label>
                                <select class="form-select" id="statusSelect">
                                    <option value="Confirmed">Confirmed
                                    </option>
                                    <option value="Pending">Pending</option>
                                    <option value="Cancelled">Cancelled
                                    </option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/checkins" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Check-in</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

