@{
    ViewData["Title"] = "Edit Meal Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary

    // Lấy ID từ đường dẫn
    var mealId = ViewContext.RouteData.Values["id"]; // Accessing RouteData

    // Initialize variables
    string bookingId;
    string mealType;
    string price;

    // Check if mealId is valid
    if (mealId != null && int.TryParse(mealId.ToString(), out int id))
    {
        switch (id)
        {
            case 1:
                bookingId = "Booking-001";
                mealType = "Vegetarian";
                price = "15";
                break;
            case 2:
                bookingId = "Booking-002";
                mealType = "Non-Vegetarian";
                price = "20";
                break;
            default:
                bookingId = "Unknown Booking";
                mealType = "Unknown Meal Type";
                price = "0";
                break;
        }
    }
    else
    {
        bookingId = "Unknown Booking";
        mealType = "Unknown Meal Type";
        price = "0";
    }
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Update Meal Information</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="bookingId">Booking ID</label>
                                <input type="text" class="form-control" id="bookingId" placeholder="Enter Booking ID"
                                    value="@bookingId" readonly>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="mealType">Meal Type</label>
                                <input type="text" class="form-control" id="mealType" placeholder="Enter Meal Type"
                                    value="@mealType">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="price">Price ($)</label>
                                <input type="number" class="form-control" id="price" placeholder="Enter Price"
                                    value="@price">
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/meals" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Meal</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

