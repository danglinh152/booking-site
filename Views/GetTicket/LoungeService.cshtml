@{
    Layout = "_GetTicketLayout";
    ViewData["Title"] = "Thư giãn tại Phòng chờ Thương gia";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thư giãn tại Phòng chờ Thương gia</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Banner -->
    <div class="relative w-full h-56 md:h-64 bg-gradient-to-b from-blue-100 to-white flex items-center justify-center mb-8">
        <img src="https://res.cloudinary.com/dgkrchato/image/upload/v1717570732/bamboo-lounge.jpg" alt="Phòng chờ Thương gia" class="absolute inset-0 w-full h-full object-cover object-top" style="z-index:1;">
        <div class="absolute top-10 left-1/2 -translate-x-1/2 z-10">
            <div class="bg-white rounded-xl shadow-lg px-8 py-4 text-center">
                <h1 class="text-2xl md:text-3xl font-bold text-green-700">Thư giãn tại Phòng chờ Thương gia</h1>
            </div>
        </div>
    </div>
    <div class="max-w-3xl mx-auto mb-8">
        <div class="text-center text-gray-700 mb-4">Thư giãn trước giờ bay trong không gian sang trọng và tiện nghi của Phòng chờ Thương gia. Trải nghiệm ngay bạn nhé! <a href="#" class="text-green-700 underline">Xem chi tiết</a></div>
        <div class="bg-white rounded-xl shadow p-8 flex flex-col items-center">
            <div class="text-xl font-bold text-blue-900 mb-2">Airport services</div>
            <div class="text-lg font-bold text-gray-800 mb-4">Hà Nội đến TP. Hồ Chí Minh</div>
            <div class="w-full max-w-lg border rounded-xl p-4 flex items-center justify-between mb-4">
                <span class="font-bold text-green-700">Ông Van Hoa Nguyen</span>
                <label class="flex items-center gap-2">
                    <input type="checkbox" id="loungeCheckbox" class="accent-green-600 w-5 h-5" />
                    <span>Phòng chờ thương gia *- <span id="loungePrice">315.000 VND</span></span>
                </label>
            </div>
            <div id="loungeSummary" class="w-full max-w-lg bg-green-50 rounded-xl p-4 mb-4 hidden">
                <div class="font-bold text-green-700 mb-1">Lựa chọn của bạn</div>
                <div>1 Phòng chờ khách Hạng Thương gia</div>
                <div class="flex justify-end mt-2 text-lg font-bold">Tổng cộng: <span id="loungeTotal" class="ml-2">315.000 VND</span></div>
            </div>
            <div class="flex justify-end w-full max-w-lg mt-4">
                <a href="/get-ticket/itinerary" class="border border-green-700 text-green-700 px-6 py-2 rounded hover:bg-green-50 font-semibold mr-2">Quay lại</a>
                <button id="btnConfirmLounge" class="bg-green-700 hover:bg-green-800 text-white font-bold px-6 py-2 rounded transition">Xác nhận</button>
            </div>
        </div>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkbox = document.getElementById('loungeCheckbox');
        const summary = document.getElementById('loungeSummary');
        const btnConfirm = document.getElementById('btnConfirmLounge');
        const loungeTotal = document.getElementById('loungeTotal');
        // Nếu đã chọn trước đó thì tick lại
        let lounge = JSON.parse(localStorage.getItem('selectedLounge') || 'null');
        if (lounge && lounge.checked) {
            checkbox.checked = true;
            summary.classList.remove('hidden');
        }
        checkbox.addEventListener('change', function() {
            if (checkbox.checked) {
                summary.classList.remove('hidden');
            } else {
                summary.classList.add('hidden');
            }
        });
        btnConfirm.onclick = function() {
            if (!checkbox.checked) {
                // Nếu bỏ chọn thì xóa khỏi localStorage
                localStorage.removeItem('selectedLounge');
            } else {
                localStorage.setItem('selectedLounge', JSON.stringify({
                    checked: true,
                    price: 315000,
                    text: '1 Phòng chờ khách Hạng Thương gia'
                }));
            }
            window.location.href = '/get-ticket/itinerary';
        }
    });
    </script>
</body>
</html> 