<body class="bg-gray-50 font-sans min-h-screen">
  <!-- Banner hành trình -->
  <div class="max-w-5xl mx-auto mt-8 mb-6">
    <div class="bg-white rounded-xl shadow flex flex-col md:flex-row items-center justify-between p-6">
      <div class="flex items-center gap-4">
        <span class="font-bold text-2xl text-green-700">Hành trình của Quý khách</span>
        <span class="ml-4 text-lg font-semibold text-gray-700">Hà Nội đến TP. Hồ Chí Minh</span>
