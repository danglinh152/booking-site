@{
    ViewData["Title"] = "Edit Booking Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary

    // Lấy ID từ đường dẫn
    var bookingId = ViewContext.RouteData.Values["id"]; // Accessing RouteData

    // Initialize variables
    string passengerName;
    string flightId;
    string seatId;
    string bookingDate;
    string bookingStatus;

    // Check if bookingId is valid
    if (bookingId != null && int.TryParse(bookingId.ToString(), out int id))
    {
        // Simulated booking data retrieval based on booking ID
        switch (id)
        {
            case 1:
                passengerName = "John Doe";
                flightId = "FL123";
                seatId = "12A";
                bookingDate = "2023-03-01";
                bookingStatus = "Confirmed";
                break;
            case 2:
                passengerName = "Jane Smith";
                flightId = "FL456";
                seatId = "15B";
                bookingDate = "2023-03-02";
                bookingStatus = "Pending";
                break;
            default:
                passengerName = "Unknown Passenger";
                flightId = "N/A";
                seatId = "N/A";
                bookingDate = "N/A";
                bookingStatus = "Unknown";
                break;
        }
    }
    else
    {
        passengerName = "Unknown Passenger";
        flightId = "N/A";
        seatId = "N/A";
        bookingDate = "N/A";
        bookingStatus = "Unknown";
    }
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Edit Booking Information</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="passengerName">Passenger Name</label>
                                <input type="text" class="form-control" id="passengerName"
                                    placeholder="Enter Passenger Name" value="@passengerName" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="flightId">Flight ID</label>
                                <input type="text" class="form-control" id="flightId" placeholder="Enter Flight ID"
                                    value="@flightId" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="seatId">Seat ID</label>
                                <input type="text" class="form-control" id="seatId" placeholder="Enter Seat ID"
                                    value="@seatId" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="bookingDate">Booking Date</label>
                                <input type="date" class="form-control" id="bookingDate" value="@bookingDate" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="bookingStatus">Status</label>
                                <select class="form-select" id="bookingStatus" required>
                                    <option value="">Select Status</option>
                                    <option value="Confirmed">
                                        Confirmed</option>
                                    <option value="Pending">Pending
                                    </option>
                                    <option value="Cancelled">
                                        Cancelled</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/bookings" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Booking</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

<script>
    // You can add any additional JavaScript needed for this form here
</script>
