<!-- Modal for Confirming Deletion -->
<div class="modal fade" id="deleteSeatModal" tabindex="-1" aria-labelledby="deleteSeatModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteSeatModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete seat <strong id="deleteSeatId"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Populate the delete seat modal with data
    var deleteSeatModal = document.getElementById('deleteSeatModal');
    deleteSeatModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var seatId = button.getAttribute('data-id');
        var seatName = button.getAttribute('data-name');

        // Update modal content
        document.getElementById('deleteSeatId').textContent = seatName;

        // Set delete action
        document.getElementById('confirmDeleteButton').onclick = function () {
            window.location.href = `/admin/seats/delete/${seatId}`;
        };
    });
</script>
