@{
    ViewData["Title"] = "Create Plane";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary
}
@model BookingSite.Models.Plane
<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Create Plane Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Create Plane</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreatePlane" asp-controller="Planes" method="post">
                            <div class="form-group mb-3">
                                <label class="form-label" for="model">Model</label>
                                <input asp-for="Model" type="text" class="form-control" id="model"
                                    placeholder="Enter required">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="capacity">Capacity</label>
                                <input asp-for="Capacity" type="number" class="form-control" id="capacity"
                                    placeholder="Enter required">
                            </div>
                            <div class=" form-group mb-3">
                                <label class="form-label" for="manufacturer">Manufacturer</label>
                                <input asp-for="Manufacturer" type="text" class="form-control" id="manufacturer"
                                    placeholder="Enter Manufacturer" required>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/planes" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create Plane</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('createPlaneForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent the default form submission

        // Gather form data
        const model = document.getElementById('model').value;
