<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Update Plane Information</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditPlane" asp-controller="Planes" asp-route-id="@Model.AircraftID"
                            method="post">
                            <input type="hidden" asp-for="AircraftID" />
                            <div class="form-group mb-3">
                                <label class="form-label" for="modelPlane">Model</label>
                                <input asp-for="Model" type="text" class="form-control" id="modelPlane"
                                    placeholder="Enter" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="capacity">Capacity</label>
                                <input asp-for="Capacity" type="number" class="form-control" id="capacity" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="manufacturer">Manufacturer</label>
                                <input asp-for="Manufacturer" type="text" class="form-control" id="manufacturer"
                                    placeholder="Enter Manufacturer" required>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/planes" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Plane</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

