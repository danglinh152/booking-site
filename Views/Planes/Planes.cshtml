                                                    class="fa-solid fa-eye"></i></a>
                                            <a href="/admin/planes/edit/2" class="btn btn-warning">Edit</a>
                                            <button class="btn btn-danger" data-bs-toggle="modal"
                                                data-bs-target="#deletePlaneModal" data-id="2" data-name="Airbus A380">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Concorde</td>
                                        <td>100</td>
                                        <td>
                                            <a href="/admin/planes/3" class="btn btn-secondary"><i
                                                    class="fa-solid fa-eye"></i></a>
                                            <a href="/admin/planes/edit/3" class="btn btn-warning">Edit</a>
                                            <button class="btn btn-danger" data-bs-toggle="modal"
                                                data-bs-target="#deletePlaneModal" data-id="3" data-name="Concorde">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>McDonnell Douglas MD-11</td>
