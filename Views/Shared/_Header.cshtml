@{
    var isLoggedIn = Context.Session.GetString("UserID") != null;
}

<header class="bg-white shadow-md">
    <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-2">
                <img src="~/images/logo.png" alt="TenPM Airways Logo" class="h-10">
                <span class="text-xl font-bold text-green-700">TenPM Airways</span>
            </a>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-6">
                <a href="/" class="text-gray-700 hover:text-green-700">Trang chủ</a>
                <a href="/about" class="text-gray-700 hover:text-green-700">Về chúng tôi</a>
                <a href="/contact" class="text-gray-700 hover:text-green-700">Liên hệ</a>
            </div>

            <!-- User Actions -->
            <div class="flex items-center space-x-4">
                @if (isLoggedIn)
                {
                    <div class="relative group">
                        <button class="flex items-center space-x-2 text-gray-700 hover:text-green-700">
                            <i class="fas fa-user-circle text-xl"></i>
                            <span>@Context.Session.GetString("UserName")</span>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 hidden group-hover:block">
                            <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-green-50">Thông tin cá nhân</a>
                            <a href="/bookings" class="block px-4 py-2 text-gray-700 hover:bg-green-50">Đặt chỗ của tôi</a>
                            <a href="/logout" class="block px-4 py-2 text-gray-700 hover:bg-green-50">Đăng xuất</a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="/login" class="text-gray-700 hover:text-green-700">Đăng nhập</a>
                    <a href="/register" class="bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-800">Đăng ký</a>
                }
            </div>
        </div>
    </nav>
</header> 