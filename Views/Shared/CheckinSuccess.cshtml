@model BookingSite.Models.Booking
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Check-in thành công";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TenPM - Check-in thành công</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<style>
    .success-container {
        max-width: 800px;
        margin: 3rem auto;
        background: #fff;
        padding: 2.5rem 2rem 3rem 2rem;
        border-radius: 12px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    .success-title {
        font-weight: 700;
        font-size: 1.8rem;
        margin-bottom: 1.8rem;
        color: #28a745;
        letter-spacing: 0.03em;
    }

    .success-message {
        font-size: 1.1rem;
        color: #4a4a4a;
        margin-bottom: 2rem;
    }

    .btn-home {
        background: linear-gradient(135deg, #5561ff 0%, #1a39c7 100%);
        border: none;
        border-radius: 8px;
        padding: 0.6rem 2.2rem;
        font-size: 1.05rem;
        font-weight: 600;
        color: white;
        box-shadow: 0 6px 12px rgba(85, 97, 255, 0.48);
        transition: background 0.4s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-home:hover {
        background: linear-gradient(135deg, #4351d6 0%, #112c9c 100%);
        box-shadow: 0 8px 20px rgba(67, 81, 214, 0.6);
        color: white;
    }

    .flight-info {
        margin-bottom: 2rem;
    }

    .flight-info p {
        margin: 0.5rem 0;
        font-size: 1rem;
    }
</style>

<body>
    <div class="success-container">
        <h2 class="success-title">Check-in thành công!</h2>
        <p class="success-message">
            Bạn đã hoàn tất check-in vé máy bay. Dưới đây là thông tin chi tiết:
        </p>

        <div class="flight-info">
            <p><strong>Mã đặt vé:</strong> @Model.BookingCode</p>
            <p><strong>Chuyến bay:</strong> @Model.Flight.DepartureAirport.Name → @Model.Flight.ArrivalAirport.Name</p>
            <p><strong>Ngày bay:</strong> @Model.Flight.FlightDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Giờ khởi hành:</strong> @Model.Flight.DepartureTime.ToString(@"hh\:mm")</p>
        </div>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Hành khách</th>
                    <th>Số CMND / Passport</th>
                    <th>Số ghế</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.BookingDetails)
                {
                    <tr>
                        <td>@detail.Passenger.FullName</td>
                        <td>@detail.Passenger.IdentityNumber</td>
                        <td>@detail.Passenger.SeatNumber</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Index", "Home")" class="btn-home">Về trang chủ</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>