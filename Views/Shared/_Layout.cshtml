        </div>
    </div>
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <script src="~/js/homepage/swiper-scripts.js"></script>
    <script>
        navFunction = () => {
            // Use '===' for comparison instead of '=' for assignment
            const homeBtn = document.getElementById("homeBtn");
            const bookingBtn = document.getElementById("bookingBtn");
            const promoteBtn = document.getElementById("promoteBtn");
            const contactBtn = document.getElementById("contactBtn");

            if (location.href === "http://localhost:5002/") {
                homeBtn.style.color = "blue";
                bookingBtn.style.color = "var(--bs-nav-link-color);";
                promoteBtn.style.color = "var(--bs-nav-link-color);";
                contactBtn.style.color = "var(--bs-nav-link-color);";
            }
            else if (location.href === "http://localhost:5002/booking") {
                bookingBtn.style.color = "blue";
                homeBtn.style.color = "var(--bs-nav-link-color);";
                promoteBtn.style.color = "var(--bs-nav-link-color);";
                contactBtn.style.color = "var(--bs-nav-link-color);";
            }
            else if (location.href === "http://localhost:5002/promote") {
                promoteBtn.style.color = "blue";
                bookingBtn.style.color = "var(--bs-nav-link-color);";
                homeBtn.style.color = "var(--bs-nav-link-color);";
                contactBtn.style.color = "var(--bs-nav-link-color);";
            }
            else if (location.href === "http://localhost:5002/contact") {
                contactBtn.style.color = "blue";
                bookingBtn.style.color = "var(--bs-nav-link-color);";
                homeBtn.style.color = "var(--bs-nav-link-color);";
                promoteBtn.style.color = "var(--bs-nav-link-color);";
            }
        }

        // Call the function to apply the changes on page load
        window.onload = navFunction;
    </script>

