@{
    ViewData["Title"] = "Create Passenger";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Create Passenger Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Create Passenger</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="passengerName">Passenger Name</label>
                                <input type="text" class="form-control" id="passengerName"
                                    placeholder="Enter Passenger Name" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter Email" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="phone">Phone No.</label>
                                <input type="tel" class="form-control" id="phone" placeholder="Enter Phone Number"
                                    required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="passportNo">Passport No.</label>
                                <input type="text" class="form-control" id="passportNo"
                                    placeholder="Enter Passport Number" required>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/passengers" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Create Passenger</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

