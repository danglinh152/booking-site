@{
    ViewData["Title"] = "Edit Passenger Details";
    Layout = "~/Views/Shared/_Layout-admin.cshtml"; // Adjust layout path if necessary

    // Lấy ID từ đường dẫn
    var passengerId = ViewContext.RouteData.Values["id"]; // Accessing RouteData

    // Initialize variables
    string passengerName;
    string email;
    string phone;
    string passportNo;

    // Check if passengerId is valid
    if (passengerId != null && int.TryParse(passengerId.ToString(), out int id))
    {
        // Simulated passenger data retrieval based on passenger ID
        switch (id)
        {
            case 1:
                passengerName = "John Doe";
                email = "john.doe@example.com";
                phone = "123-456-7890";
                passportNo = "P123456789";
                break;
            case 2:
                passengerName = "Jane Smith";
                email = "jane.smith@example.com";
                phone = "987-654-3210";
                passportNo = "P987654321";
                break;
            default:
                passengerName = "Unknown Passenger";
                email = "N/A";
                phone = "N/A";
                passportNo = "N/A";
                break;
        }
    }
    else
    {
        passengerName = "Unknown Passenger";
        email = "N/A";
        phone = "N/A";
        passportNo = "N/A";
    }
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-md-12">
                <!-- Update Form -->
                <div class="card mt-4 shadow-sm border-light">
                    <div class="card-header text-white">
                        <h2 class="mb-0">Edit Passenger Information</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mb-3">
                                <label class="form-label" for="passengerName">Passenger Name</label>
                                <input type="text" class="form-control" id="passengerName"
                                    placeholder="Enter Passenger Name" value="@passengerName" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter Email"
                                    value="@email" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="phone">Phone No.</label>
                                <input type="tel" class="form-control" id="phone" placeholder="Enter Phone Number"
                                    value="@phone" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="passportNo">Passport No.</label>
                                <input type="text" class="form-control" id="passportNo"
                                    placeholder="Enter Passport Number" value="@passportNo" required>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/passengers" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Update Passenger</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- [ form-element ] end -->
            </div>
        </div>
    </div>
</div>

